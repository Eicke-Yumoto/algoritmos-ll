#include <stdio.h>
#include <locale.h>

//CRIANDO UM VETOR[20] E PRINTAR OS NUMEROS ARMAZENADOS E SUAS POSIÇÕES

int main() {
    int vetor[20];

    for(int i = 0; i < 20; i++) {
        vetor[i] = i + 1;
    }

    for(int i = 0; i < 20; i++){
        if(vetor[i]%2 == 0) {
            printf("numero %d posicao %d\n", vetor[i], i);
        }
    }
}
